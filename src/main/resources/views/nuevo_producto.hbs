<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{{#producto}}Editar{{/producto}}{{^producto}}Nuevo{{/producto}} Producto</title>
</head>
<body>
    <h1>{{#producto}}Editar{{/producto}}{{^producto}}Nuevo{{/producto}} Producto</h1>

    <form action="{{#producto}}/productos/editar{{/producto}}{{^producto}}/productos{{/producto}}" method="post">
        {{#producto}}
            <input type="hidden" name="id" value="{{id}}">
        {{/producto}}

        <label for="descripcion">Descripción:</label>
        <input type="text" id="descripcion" name="descripcion"
               value="{{#producto}}{{descripcion}}{{/producto}}" required>
        <br><br>

        <label for="precio">Precio:</label>
        <input type="number" step="0.01" id="precio" name="precio"
               value="{{#producto}}{{precio}}{{/producto}}" required>
        <br><br>

        <label for="categoria">Categoría:</label>
        <select name="categoria.id" id="categoria" required>
            {{#categorias}}
                <option value="{{id}}">{{descripcion}}</option>
            {{/categorias}}
        </select>
        <br><br>

        <button type="submit">Guardar</button>
        <a href="/productos">Cancelar</a>
    </form>
</body>
</html>
